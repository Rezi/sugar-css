{
	"name": "sugar-css-framework",
	"version": "0.2.5",
	"description": "Sugar.css minimalistic CSS framework",
	"main": "dist/sugar.css",
	"homepage": "https://sugar-css.com/",
	"repository": "https://github.com/Rezi/sugar-css",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"build-dist": "cpx 'src/lib/scss/**' 'dist' && sass dist/index.scss dist/sugar.css && sass dist/index.scss dist/sugar.min.css --style=compressed && sass dist/index.scss static/sugar.min.css --style=compressed",
		"ionic:build": "npm run build",
		"ionic:serve": "npm run dev"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.18",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"cpx": "^1.5.0",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.41.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.4",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"vite": "^5.3.3"
	},
	"dependencies": {
		"colorjs.io": "^0.4.5",
		"cssnano": "^7.0.4",
		"cssnano-preset-advanced": "^7.0.4",
		"highlight.js": "^11.9.0",
		"postcss": "^8.4.39",
		"sass": "^1.77.6",
		"which": "^4.0.0",
		"zx": "^7.2.3"
	},
	"keywords": [
		"css",
		"css-framework"
	],
	"author": "Tomas Rezac",
	"license": "MIT",
	"type": "module",
	"bin": "./build.mjs",
	"directories": {
		"src": "./dist"
	}
}
